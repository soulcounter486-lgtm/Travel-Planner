{
  "version": 2,
  "buildCommand": "npx tsx script/build.ts",
  "outputDirectory": "dist/public",
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/(api|auth)/:path*",
      "destination": "dist/index.cjs"
    },
    {
      "source": "/assets/:path*",
      "destination": "/dist/public/assets/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "dist/index.cjs"
    }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
